<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fatcat.coursetable">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.CourseActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.CourseLoginActivity" />
        <activity android:name=".activity.CourseInfoActivity" />
        <activity android:name=".activity.StatementActivity" />
        <activity android:name=".activity.ScoreAtivity" />

        <activity
            android:name=".activity.SettingActivity"
            android:label="@string/title_activity_setting"
            android:theme="@style/AppTheme">

        </activity>

        <receiver android:name=".widget.CourseWidgetProvider" android:label="吉珠课表">
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/ocurse_widget_info"/>
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
                <action android:name="com.jluzh.jw.updateweeknum" />
                <action android:name="com.jluzh.jw.updatecourse" />
            </intent-filter>
        </receiver>

        <service
            android:name=".jw.service.DataService"
            android:enabled="true"
            android:exported="true">

        </service>

    </application>

</manifest>